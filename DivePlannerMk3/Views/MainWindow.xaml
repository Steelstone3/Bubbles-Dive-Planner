<Window
    x:Class="DivePlannerMk3.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:diveheaderuc="clr-namespace:DivePlannerMk3.Views.UserControls.DiveHeader;assembly=DivePlannerMk3"
    xmlns:diveinfouc="clr-namespace:DivePlannerMk3.Views.UserControls.DiveInfo;assembly=DivePlannerMk3"
    xmlns:diveplanuc="clr-namespace:DivePlannerMk3.Views.UserControls.DivePlan;assembly=DivePlannerMk3"
    xmlns:diveresultuc="clr-namespace:DivePlannerMk3.Views.UserControls.DiveResult;assembly=DivePlannerMk3"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:DivePlannerMk3.ViewModels;assembly=DivePlannerMk3"
    Title="Kratos Dive Planner"
    MinWidth="848"
    MinHeight="480"
    d:DesignHeight="480"
    d:DesignWidth="848"
    Icon="/Assets/diveplanner-logo.ico"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="300" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition MinWidth="300" />
        </Grid.ColumnDefinitions>

        <diveheaderuc:DiveHeaderFileHeaderView
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3" />

        <ScrollViewer
            Grid.Row="1"
            Grid.Column="0"
            VerticalScrollBarVisibility="Auto">
            <StackPanel Background="#FF90CAF9">
                <TextBlock
                    Grid.Row="0"
                    Margin="4"
                    FontSize="20"
                    FontStyle="Italic"
                    FontWeight="Bold"
                    Text="Dive Plan" />
                <diveplanuc:PlanDiveModelSelectorView />
                <diveplanuc:PlanDiveStepView />
                <diveplanuc:PlanGasMixtureView />
                <Expander Header="Add Gas Mixtures ..." Background="#FFC3FDFF" Margin="4,0">
                    <diveplanuc:PlanAddGasMixtureView />
                </Expander>
                <diveplanuc:PlanGasManagementSetup />
                <diveplanuc:PlanCalculateDiveStepView />
            </StackPanel>
        </ScrollViewer>

        <ScrollViewer
            Grid.Row="1"
            Grid.Column="1"
            VerticalScrollBarVisibility="Auto">
            <StackPanel Background="#FF9E9E9E">
                <diveresultuc:DiveResultsView />
                <diveresultuc:DiveResultWarningsView />
            </StackPanel>
        </ScrollViewer>

        <ScrollViewer
            Grid.Row="1"
            Grid.Column="2"
            VerticalScrollBarVisibility="Auto">
            <StackPanel Background="#FF90CAF9">
                <TextBlock
                    Grid.Row="0"
                    Margin="4"
                    FontSize="20"
                    FontStyle="Italic"
                    FontWeight="Bold"
                    Text="Dive Information" />
                <diveinfouc:InfoDecompressionProfileView />
                <diveinfouc:InfoDiveBoundariesView />
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Window>