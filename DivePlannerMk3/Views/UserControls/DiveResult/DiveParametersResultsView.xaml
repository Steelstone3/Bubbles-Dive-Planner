<UserControl
    x:Class="DivePlannerMk3.Views.UserControls.DiveResult.DiveParametersResultsView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel>
        <TextBlock
            Margin="32,4"
            FontSize="16"
            FontWeight="DemiBold"
            Text="Current Dive Step" />

        <Grid Margin="32,4" Background="#FFCFCFCF">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Row="0"
                Margin="8,0"
                Text="Dive Model:" />
            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                Margin="8,0"
                Text="{Binding DiveParametersResults.DiveParametersUsed.DiveModelUsed}" />

            <TextBlock
                Grid.Row="1"
                Margin="8,0"
                Text="Depth:" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                Margin="8,0"
                Text="{Binding DiveParametersResults.DiveParametersUsed.DiveStepModel.Depth}" />
            <TextBlock
                Grid.Row="2"
                Margin="8,0"
                Text="Time:" />
            <TextBlock
                Grid.Row="2"
                Grid.Column="1"
                Margin="8,0"
                Text="{Binding DiveParametersResults.DiveParametersUsed.DiveStepModel.Time}" />
            <TextBlock
                Grid.Row="3"
                Margin="8,0"
                Text="Gas Mixture Name:" />
            <TextBlock
                Grid.Row="3"
                Grid.Column="1"
                Margin="8,0"
                Text="{Binding DiveParametersResults.DiveParametersUsed.GasMixtureModel.GasName}" />
            <!--<TextBlock
                Grid.Row="4"
                Margin="8,0"
                Text="Gas Used:" />
            <TextBlock
                Grid.Row="4"
                Grid.Column="1"
                Margin="8,0"
                Text="{Binding DiveParametersResults.DiveParametersUsed.GasUsageModel.GasUsedOnDiveStep}" />
            <TextBlock
                Grid.Row="5"
                Margin="8,0"
                Text="Gas Remaining:" />
            <TextBlock
                Grid.Row="5"
                Grid.Column="1"
                Margin="8,0"
                Text="{Binding DiveParametersResults.DiveParametersUsed.GasUsageModel.GasRemaining}" />-->
        </Grid>
    </StackPanel>
</UserControl>