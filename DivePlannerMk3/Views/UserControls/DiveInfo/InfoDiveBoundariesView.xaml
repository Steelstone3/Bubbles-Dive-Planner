<UserControl
    x:Class="DivePlannerMk3.Views.UserControls.DiveInfo.InfoDiveBoundariesView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel IsVisible="{Binding DiveInfo.DiveBoundaries.IsUiVisible}">
        <StackPanel Background="#FF5D99C6">
            <TextBlock
                Margin="4"
                FontSize="16"
                FontWeight="DemiBold"
                Text="Dive Boundaries" />
        </StackPanel>

        <StackPanel Margin="4,0" Background="#FFC3FDFF">
            <TextBlock Margin="4" Text="Ceiling (m):" />
            <TextBlock Margin="4" Text="{Binding DiveInfo.DiveCeilingViewModel.DiveCeiling}" />
            <TextBlock Margin="4" Text="Maximum Operating Depth (m):" FontWeight="Bold" />
            <TextBlock Margin="4" Text="{Binding DivePlan.GasMixture.MaximumOperatingDepth}" />
        </StackPanel>

    </StackPanel>
</UserControl>
