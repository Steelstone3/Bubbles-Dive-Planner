<UserControl
    x:Class="DivePlannerMk3.Views.UserControls.DiveInfo.InfoDecompressionProfileView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel IsVisible="{Binding DiveInfo.DecompressionProfile.IsUiVisible}">

        <StackPanel Background="#FF5D99C6">
            <TextBlock
                Margin="4"
                FontSize="16"
                FontWeight="DemiBold"
                Text="Decompression Profile" />
        </StackPanel>

        <StackPanel Margin="4,0" Background="#FFC3FDFF">
            <!--Step increment combo box 3, 6, 9 or 12. Seeded on gas changed read only items list of decompression steps (depth and time). Gas mix (user selected and read only) to be used by name (may want to stop duplicate names)-->
            <Button
                Margin="8,4"
                HorizontalAlignment="Right"
                Command="{Binding CalculateDecompressionCommand}"
                Content="Calculate Decompression" />
        </StackPanel>

    </StackPanel>
</UserControl>
