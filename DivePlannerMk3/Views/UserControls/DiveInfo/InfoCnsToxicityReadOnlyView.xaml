<UserControl
    x:Class="DivePlannerMk3.Views.UserControls.DiveInfo.InfoCnsToxicityReadOnlyView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel IsVisible="{Binding DiveInfo.CnsToxicityViewModel.IsUiVisible}">

        <StackPanel Background="#FF5D99C6">
            <TextBlock
                Margin="4"
                FontSize="16"
                FontWeight="DemiBold"
                Text="CNS Toxicity" />
        </StackPanel>

        <StackPanel Margin="4,0" Background="#FFC3FDFF">
            <TextBlock Margin="4" Text="Insert in here a table that represents CNS toxicity that is read only" />
        </StackPanel>

    </StackPanel>
</UserControl>
