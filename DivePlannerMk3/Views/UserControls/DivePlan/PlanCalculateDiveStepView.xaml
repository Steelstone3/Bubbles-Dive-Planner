<UserControl
    x:Class="DivePlannerMk3.Views.UserControls.DivePlan.PlanCalculateDiveStepView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <StackPanel Background="#FF5D99C6">
            <TextBlock
                Margin="4"
                FontSize="16"
                FontWeight="DemiBold"
                Text="Calculate Dive Profile" />
        </StackPanel>
        <StackPanel Margin="4,0" Background="#FFC3FDFF">
            <Button
                Margin="4"
                HorizontalAlignment="Stretch"
                Command="{Binding CalculateDiveStepCommand}"
                IsEnabled="{Binding CanRunDiveStep}"
                FontWeight="Bold"
                Content="Calculate" />
        </StackPanel>
    </StackPanel>
</UserControl>
