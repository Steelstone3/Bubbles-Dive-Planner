<UserControl
    x:Class="DivePlannerMk3.Views.UserControls.DivePlan.PlanGasManagementSetup"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel IsEnabled="{Binding DivePlan.GasManagement.IsUiEnabled}" IsVisible="{Binding DivePlan.GasManagement.IsUiVisible}">
        <StackPanel Background="#FF5D99C6">
            <TextBlock
                Margin="4"
                FontSize="16"
                FontWeight="DemiBold"
                Text="Gas Management Setup" />
        </StackPanel>
        <StackPanel>
            <StackPanel Margin="4,0" Background="#FFC3FDFF">
                <TextBlock Margin="4" Text="Cylinder Volume (L):" FontWeight="Bold" />
                <TextBox Margin="4" Text="{Binding DivePlan.GasManagement.CylinderVolume}" />
                <TextBlock Margin="4" Text="Cylinder Pressure (Bar):" FontWeight="Bold" />
                <TextBox Margin="4" Text="{Binding DivePlan.GasManagement.CylinderPressure}" />
                <TextBlock Margin="4" Text="SAC Rate (L/min):" FontWeight="Bold" />
                <TextBox Margin="4" Text="{Binding DivePlan.GasManagement.SacRate}" />
            </StackPanel>
        </StackPanel>
    </StackPanel>

</UserControl>
