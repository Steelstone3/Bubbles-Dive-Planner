<UserControl
    x:Class="BubblesDivePlanner.Results.ResultsView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dive_results="clr-namespace:BubblesDivePlanner.Results"

    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel>
        <TabControl>
            <TabItem Header="Latest Dive Result Summary" 
            FontSize="12"
            Foreground="Black"
            FontWeight="DemiBold"
            VerticalContentAlignment="Center">
                <StackPanel>
                <dive_results:DiveTableResultView/>
                <dive_results:DiveParametersUsedView/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Historic Dive Results"
            FontSize="12"
            Foreground="Black"
            FontWeight="DemiBold"
            VerticalContentAlignment="Center">
                <!-- <dive_results:HistoricDiveTableResultView/> -->
            </TabItem>
            <TabItem Header="Historic Dive Parameters Used"
            FontSize="12"
            Foreground="Black"
            FontWeight="DemiBold"
            VerticalContentAlignment="Center">
                <!-- <dive_results:HistoricDiveTableResultView/> -->
            </TabItem>
        </TabControl>
    </StackPanel>
</UserControl>

