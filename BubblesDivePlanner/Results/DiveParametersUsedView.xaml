<UserControl
    x:Class="BubblesDivePlanner.Results.DiveParametersUsedView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

<StackPanel IsVisible="{Binding ResultsOverview.IsVisible}">
    <TextBlock
        Margin="8,4"
        FontSize="16"
        FontWeight="DemiBold"
        Text="Dive Parameters Used" />

    <StackPanel Background="#FFC3FDFF" Margin="8">
        
        <TextBlock Text="Dive Step" FontWeight="Bold" Margin="8,4" />

        <StackPanel Orientation="Horizontal" Margin="32,2">
            <TextBlock Text="Depth (m): "/>
            <TextBlock Text="{Binding ResultsOverview.LatestResult.DiveStep.Depth}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="32,2">
            <TextBlock Text="Time (min): "/>
            <TextBlock Text="{Binding ResultsOverview.LatestResult.DiveStep.Time}" />
        </StackPanel>

        <TextBlock Text="Cylinder" FontWeight="Bold" Margin="8,4"/>

        <StackPanel Orientation="Horizontal" Margin="32,2">
            <TextBlock Text="Name: "/>
            <TextBlock Text="{Binding ResultsOverview.LatestResult.SelectedCylinder.CylinderName}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="32,2">
            <TextBlock Text="Volume (l): "/>
            <TextBlock Text="{Binding ResultsOverview.LatestResult.SelectedCylinder.CylinderVolume}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="32,2">
            <TextBlock Text="Pressure (bar): "/>
            <TextBlock Text="{Binding ResultsOverview.LatestResult.SelectedCylinder.CylinderPressure}" />
        </StackPanel>

        <TextBlock Text="Gas Mixture" FontWeight="Bold" Margin="8,4"/>

        <StackPanel Orientation="Horizontal" Margin="32,2">
            <TextBlock Text="Oxygen (%): "/>
            <TextBlock Text="{Binding ResultsOverview.LatestResult.SelectedCylinder.GasMixture.Oxygen}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="32,2">
            <TextBlock Text="Helium (%): "/>
            <TextBlock Text="{Binding ResultsOverview.LatestResult.SelectedCylinder.GasMixture.Helium}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="32,2">
            <TextBlock Text="Nitrogen (%): "/>
            <TextBlock Text="{Binding ResultsOverview.LatestResult.SelectedCylinder.GasMixture.Nitrogen}" />
        </StackPanel>

        <TextBlock Text="Cylinder Gas Usage" FontWeight="Bold" Margin="8,4"/>

        <StackPanel Orientation="Horizontal" Margin="32,2">
            <TextBlock Text="Initial Pressurised Volume (l): "/>
            <TextBlock Text="{Binding ResultsOverview.LatestResult.SelectedCylinder.InitialPressurisedCylinderVolume}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="32,2">
            <TextBlock Text="Remaining (l): "/>
            <TextBlock Text="{Binding ResultsOverview.LatestResult.SelectedCylinder.GasUsage.GasRemaining}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="32,2">
            <TextBlock Text="Used (l): "/>
            <TextBlock Text="{Binding ResultsOverview.LatestResult.SelectedCylinder.GasUsage.GasUsed}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="32,2">
            <TextBlock Text="Surface Air Consumption Rate (l/min): "/>
            <TextBlock Text="{Binding ResultsOverview.LatestResult.SelectedCylinder.GasUsage.SurfaceAirConsumptionRate}" />
        </StackPanel>
    </StackPanel>
    </StackPanel>
</UserControl>