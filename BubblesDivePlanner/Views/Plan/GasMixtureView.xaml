<UserControl
    x:Class="BubblesDivePlanner.Views.Plan.GasMixtureView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
        <StackPanel Margin="4,0" Background="#FFC3FDFF">
            <TextBlock Margin="4" Text="Oxygen (%):" FontWeight="Bold"/>
            <TextBox Margin="4" Text="{Binding DiveStage.GasMixture.Oxygen}" />
            <TextBlock Margin="4" Text="Helium (%):" FontWeight="Bold"/>
            <TextBox Margin="4" Text="{Binding DiveStage.GasMixture.Helium}" />
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="4,4,0,4" Text="Nitrogen (%): " FontWeight="Bold"/>
                <TextBlock Margin="0,4,4,4" Text="{Binding DiveStage.GasMixture.Nitrogen}"/>
            </StackPanel>
        </StackPanel>
</UserControl>