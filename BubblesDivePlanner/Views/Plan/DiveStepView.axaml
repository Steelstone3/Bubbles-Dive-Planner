<UserControl
    x:Class="BubblesDivePlanner.Views.Plan.DiveStepView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <StackPanel Margin="4,0" Background="#FF5D99C6">
            <TextBlock
                Foreground="Black"
                Margin="4"
                FontSize="16"
                FontWeight="DemiBold"
                Text="Dive Step" />
        </StackPanel>
        <StackPanel Margin="4,0" Background="#FFC3FDFF">
            <TextBlock Foreground="Black" Margin="8,4" Text="Depth (m):" FontWeight="Bold" />
            <!-- <TextBox Foreground="Black" Margin="8,4" Text="{Binding DivePlan.DiveStep.Depth}"
            /> -->
            <TextBlock Foreground="Black" Margin="8,4" Text="Time (min):" FontWeight="Bold" />
            <!-- <TextBox Foreground="Black" Margin="8,4" Text="{Binding DivePlan.DiveStep.Time}" /> -->
        </StackPanel>
    </StackPanel>
</UserControl>