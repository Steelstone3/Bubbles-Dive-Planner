<UserControl
    x:Class="BubblesDivePlanner.Views.Plan.CalculateDivePlanView"
    x:DataType="vm:MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:BubblesDivePlanner.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <StackPanel Margin="4,0" Background="#FF5D99C6">
            <TextBlock
                Margin="4"
                FontSize="16"
                FontWeight="DemiBold"
                Text="Calculate Dive Plan" />
        </StackPanel>
        <StackPanel Margin="4,0" Background="#FFC3FDFF">
            <TextBlock Margin="8,4" Text="Depth (m):" FontWeight="Bold" />
            <TextBox Watermark="Enter Depth" Margin="8,4" Text="{Binding Planner.DiveStep.Depth}" />
            <TextBlock Margin="8,4" Text="Time (min):" FontWeight="Bold" />
            <TextBox Watermark="Enter Time" Margin="8,4" Text="{Binding Planner.DiveStep.Time}" />
        </StackPanel>
    </StackPanel>
</UserControl>