<UserControl
    x:Class="BubblesDivePlanner.Views.Planner.Stage.CalculateDivePlanView"
    x:DataType="vm:MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:BubblesDivePlanner.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <StackPanel Margin="4,0" Background="#FF5D99C6">
            <TextBlock
                Margin="4"
                FontSize="16"
                FontWeight="DemiBold"
                Text="Calculate Dive Plan" />
        </StackPanel>
        <!-- ↓ Command="{Binding CalculateDivePlanCommand}" HotKey="Enter" -->
        <!-- ↓ IsEnabled="{Binding CanCalculateDivePlan}" -->
        <StackPanel Margin="4,0" Background="#FFC3FDFF">
            <Button
                Margin="8,4"
                HorizontalAlignment="Stretch"
                FontWeight="Bold"
                Content="Calculate Dive Plan" />
        </StackPanel>
    </StackPanel>
</UserControl>