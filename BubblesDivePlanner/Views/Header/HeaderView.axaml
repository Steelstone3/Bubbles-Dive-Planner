<UserControl
    x:Class="BubblesDivePlanner.Views.Header.HeaderView"
    x:DataType="vm:MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:BubblesDivePlanner.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Menu Background="#FFCFCFCF">
            <MenuItem Header="_File">
                <!-- â†“ Command="{Binding HeaderModel.NewModel.NewApplicationInstanceCommand}" -->
                <MenuItem Header="_New" HotKey="Ctrl+N" />
                <MenuItem Header="_Open ..." HotKey="Ctrl+O" />
                <MenuItem Header="_Save ..." HotKey="Ctrl+S" />
                <Separator />
                <MenuItem Header="_Print" HotKey="Ctrl+P" />
            </MenuItem>

            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo" HotKey="Ctrl+Z" />
                <MenuItem Header="_Redo" HotKey="Ctrl+Y" />
            </MenuItem>

            <MenuItem Header="_Help">
                <MenuItem Header="_View Help" HotKey="Ctrl+H" />
                <MenuItem Header="_About" HotKey="Ctrl+I" />
            </MenuItem>
        </Menu>
    </Grid>
</UserControl>