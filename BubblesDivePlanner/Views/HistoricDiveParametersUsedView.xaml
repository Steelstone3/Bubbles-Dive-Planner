<UserControl
    x:Class="BubblesDivePlanner.Results.HistoricDiveParametersUsedView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dive_results="clr-namespace:BubblesDivePlanner.Results"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel IsVisible="{Binding ResultsOverview.IsVisible}">
        <TextBlock
            Margin="8,4"
            FontSize="16"
            FontWeight="DemiBold"
            Text="Historic Dive Parameters Used" />

        <dive_results:DiveParametersUsedView/>
    </StackPanel>
</UserControl>