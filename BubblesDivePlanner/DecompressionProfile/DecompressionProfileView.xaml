<UserControl
    x:Class="BubblesDivePlanner.DecompressionProfile.DecompressionProfileView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
        <StackPanel IsVisible="{Binding DecompressionProfile.IsVisible}">
            <StackPanel Background="#FF5D99C6">
                <TextBlock
                    Margin="4"
                    FontSize="16"
                    FontWeight="DemiBold"
                    Text="Decompression Profile" />
            </StackPanel>
            <StackPanel Margin="4,0" Background="#FFC3FDFF">
                <TextBlock Text="Dive Steps:" FontWeight="Bold" Margin="4,2"/>
            </StackPanel>
        </StackPanel>
</UserControl>