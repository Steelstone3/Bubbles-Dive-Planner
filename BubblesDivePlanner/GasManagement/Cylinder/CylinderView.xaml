<UserControl
    x:Class="BubblesDivePlanner.GasManagement.Cylinder.CylinderView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:gas_mixture="clr-namespace:BubblesDivePlanner.GasManagement.GasMixture"
    xmlns:gas_usage="clr-namespace:BubblesDivePlanner.GasManagement.GasUsage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel Margin="4,0" Background="#FFC3FDFF">
        <StackPanel Background="#FF5D99C6">
            <TextBlock
                Margin="4"
                FontSize="16"
                FontWeight="DemiBold"                    
                Text="Cylinder" />
            </StackPanel>
        <StackPanel Margin="4,0" Background="#FFC3FDFF">
            <TextBlock Margin="4" Text="Cylinder Volume (l):" FontWeight="Bold"/>
            <TextBox Margin="4" Text="" />
            <TextBlock Margin="4" Text="Cylinder Pressure (BAR):" FontWeight="Bold" />
            <TextBox Margin="4" Text="" />
            <gas_mixture:GasMixtureView/>
            <gas_usage:GasUsageView/>
        </StackPanel>
    </StackPanel>
</UserControl>