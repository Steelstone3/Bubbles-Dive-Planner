<UserControl
    x:Class="BubblesDivePlanner.DiveStep.DiveStepView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <StackPanel Background="#FF5D99C6">
            <TextBlock
                Margin="4"
                FontSize="16"
                FontWeight="DemiBold"
                Text="Dive Step" />
        </StackPanel>
        <StackPanel Margin="4,0" Background="#FFC3FDFF">
            <TextBlock Margin="4" Text="Depth (m):" FontWeight="Bold"/>
            <TextBox Margin="4" Text="{Binding DiveStep.Depth}" />
            <TextBlock Margin="4" Text="Time (min):" FontWeight="Bold"/>
            <TextBox Margin="4" Text="{Binding DiveStep.Time}" />
        </StackPanel>

    </StackPanel>
</UserControl>